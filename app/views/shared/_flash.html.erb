<% if notice %>
  <div data-turbo-temporary="true" style="position: fixed; top: 80px; right: 20px; z-index: 1000; animation: slideIn 0.3s ease-out forwards; transform: translateX(100%);">
    <div style="background: #006D77; color: #F4F1DE; padding: 15px 20px; border-radius: 5px; box-shadow: 0 4px 10px rgba(0,0,0,0.2); font-family: 'Patrick Hand', cursive; font-size: 1.1em;">
      <%= notice %>
    </div>
    <script>
      setTimeout(function() {
        const el = document.querySelector('[data-turbo-temporary="true"]');
        if (el) el.remove();
      }, 3000);
    </script>
  </div>
<% end %>

<% if alert %>
  <div data-turbo-temporary="true" style="position: fixed; top: 80px; right: 20px; z-index: 1000; animation: slideIn 0.3s ease-out forwards; transform: translateX(100%);">
    <div style="background: #E07A5F; color: #F4F1DE; padding: 15px 20px; border-radius: 5px; box-shadow: 0 4px 10px rgba(0,0,0,0.2); font-family: 'Patrick Hand', cursive; font-size: 1.1em;">
      <%= alert %>
    </div>
    <script>
      setTimeout(function() {
        const el = document.querySelector('[data-turbo-temporary="true"]');
        if (el) el.remove();
      }, 3000);
    </script>
  </div>
<% end %>

<style>
  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(100%);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>
