<% if notice %>
  <div style="position: fixed; top: 20px; right: 20px; z-index: 1000; background: #006D77; color: #F4F1DE; padding: 15px 20px; border-radius: 5px; box-shadow: 0 4px 10px rgba(0,0,0,0.2); font-family: 'Patrick Hand', cursive; font-size: 1.1em;">
    <%= notice %>
  </div>
<% end %>

<% if alert %>
  <div style="position: fixed; top: 20px; right: 20px; z-index: 1000; background: #E07A5F; color: #F4F1DE; padding: 15px 20px; border-radius: 5px; box-shadow: 0 4px 10px rgba(0,0,0,0.2); font-family: 'Patrick Hand', cursive; font-size: 1.1em;">
    <%= alert %>
  </div>
<% end %>
