<% if !logged_in? %>
  <div
    class="min-h-screen flex items-center justify-center p-4 bg-slate-950 relative overflow-hidden"
    data-controller="questboard"
    data-questboard-active-value="campaigns"
  >
    <div class="absolute inset-0 flex flex-col items-center justify-center bg-slate-950 z-50" data-questboard-target="loading">
      <%= lucide_icon "castle", class: "text-indigo-500 animate-bounce mb-4", width: 64, height: 64 %>
      <p class="text-indigo-400 text-xs tracking-widest uppercase font-bold">Opening Portal...</p>
    </div>

    <div class="w-full max-w-lg z-10 animate-in fade-in zoom-in duration-500">
      <div class="bg-slate-900/95 border-4 border-slate-700 p-8 shadow-2xl relative">
        <h1 class="text-3xl text-white text-center mb-2 font-black tracking-tighter uppercase">QuestBoard</h1>
        <p class="text-indigo-400 text-center text-[10px] mb-10 font-bold tracking-[0.3em] uppercase">The Campaign Matching Market</p>

        <%= link_to login_path,
          class: "w-full flex items-center justify-center gap-4 bg-[#ec3750] hover:bg-[#d12f45] text-white py-5 border-b-8 border-red-900 active:border-b-2 active:translate-y-1 transition-all" do %>
          <div class="bg-white p-1 rounded-sm">
            <img src="https://assets.hackclub.com/icon-square.png" alt="Hack Club" class="w-6 h-6" />
          </div>
          <span class="text-sm font-bold tracking-widest uppercase">ENTER THE MARKETPLACE</span>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div class="min-h-screen bg-slate-950 text-slate-200 flex flex-col md:flex-row font-sans" data-controller="questboard" data-questboard-active-value="campaigns">
    <%= turbo_stream_from :campaigns %>
    <%= turbo_stream_from [current_user, :footer] %>
    <%= turbo_stream_from [current_user, :suggestions] %>
    <%= turbo_stream_from [current_user, :queue] %>
    <aside class="w-full md:w-72 bg-slate-900 border-r-4 border-slate-800 flex flex-col shrink-0">
      <div class="p-8 border-b-4 border-slate-800">
        <h2 class="text-sm font-black text-indigo-400 tracking-widest uppercase flex items-center gap-2">
          <%= lucide_icon "dice-6", width: 18, height: 18 %> QuestBoard
        </h2>
      </div>

      <nav class="flex-1 p-4 space-y-2">
        <button
          data-action="questboard#switch"
          data-questboard-view-param="campaigns"
          data-questboard-target="tab"
          class="w-full flex items-center gap-4 p-4 text-[10px] font-black tracking-widest uppercase transition-all border-l-4 bg-indigo-600/20 text-indigo-400 border-indigo-500"
        >
          <%= lucide_icon "castle", width: 16, height: 16 %>
          Live Campaigns
        </button>
        <button
          data-action="questboard#switch"
          data-questboard-view-param="matching"
          data-questboard-target="tab"
          class="w-full flex items-center gap-4 p-4 text-[10px] font-black tracking-widest uppercase transition-all border-l-4 hover:bg-slate-800 text-slate-500 border-transparent hover:text-slate-300"
        >
          <%= lucide_icon "sparkles", width: 16, height: 16 %>
          Find a Group
        </button>
        <button
          data-action="questboard#switch"
          data-questboard-view-param="profile"
          data-questboard-target="tab"
          class="w-full flex items-center gap-4 p-4 text-[10px] font-black tracking-widest uppercase transition-all border-l-4 hover:bg-slate-800 text-slate-500 border-transparent hover:text-slate-300"
        >
          <%= lucide_icon "user", width: 16, height: 16 %>
          My Adventurer Profile
        </button>
      </nav>

      <div class="p-6 border-t-4 border-slate-800">
        <div id="<%= dom_id(current_user, :footer) %>">
          <%= render "users/footer", user: current_user %>
        </div>
      </div>
    </aside>

    <main class="flex-1 p-6 md:p-10 overflow-y-auto">
      <section data-questboard-target="panel" data-questboard-panel="campaigns" class="animate-in fade-in slide-in-from-bottom-4 duration-500">
        <header class="flex justify-between items-end mb-10 pb-6 border-b-2 border-slate-800">
          <div>
            <h1 class="text-2xl font-black uppercase text-white">Matching Market</h1>
            <p class="text-slate-500 text-xs font-bold uppercase tracking-widest mt-1">Discover campaigns looking for players</p>
          </div>
          <button data-action="questboard#toggleHost" class="bg-indigo-600 text-[10px] font-bold py-3 px-6 border-b-4 border-indigo-900 active:border-b-0 active:translate-y-1">HOST CAMPAIGN</button>
        </header>

        <div data-questboard-target="hostForm" class="hidden mb-8 bg-slate-900 border-4 border-slate-800 p-6">
          <h3 class="text-[10px] font-black text-indigo-400 uppercase mb-4 tracking-widest">Host Campaign</h3>
          <%= form_with model: Campaign.new, url: campaigns_path, data: { turbo_frame: "_top" } do |f| %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-[9px] font-black uppercase text-slate-500 mb-2">Title *</label>
                <%= f.text_field :title, required: true, class: "w-full bg-slate-950 border border-slate-800 text-slate-200 text-[10px] p-3 uppercase font-bold", placeholder: "The Lost Mine of Phandelver" %>
              </div>
              <div>
                <label class="block text-[9px] font-black uppercase text-slate-500 mb-2">Start Time</label>
                <%= f.text_field :start_time, class: "w-full bg-slate-950 border border-slate-800 text-slate-200 text-[10px] p-3 uppercase font-bold", placeholder: "Tuesdays 7PM" %>
              </div>
              <div>
                <label class="block text-[9px] font-black uppercase text-slate-500 mb-2">Status</label>
                <%= f.select :status, ["Accepting", "Forming"], {}, class: "w-full bg-slate-950 border border-slate-800 text-slate-200 text-[10px] p-3 uppercase font-bold" %>
              </div>
              <div>
                <label class="block text-[9px] font-black uppercase text-slate-500 mb-2">Atmosphere</label>
                <%= f.select :atmosphere, ["Classic High Fantasy", "Dark Horror", "General Silliness"], {}, class: "w-full bg-slate-950 border border-slate-800 text-slate-200 text-[10px] p-3 uppercase font-bold" %>
              </div>
              <div class="md:col-span-2">
                <label class="block text-[9px] font-black uppercase text-slate-500 mb-2">Needs</label>
                <div class="flex flex-wrap gap-4">
                  <% ["Tank", "Supporter", "Healer", "Optimizer", "DM"].each do |need| %>
                    <label class="flex items-center gap-2 text-[9px] font-black uppercase text-slate-400">
                      <%= f.check_box :needs, { multiple: true, class: "accent-indigo-500" }, need, nil %>
                      <span><%= need %></span>
                    </label>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="flex justify-end mt-6">
              <%= f.submit "CREATE CAMPAIGN", class: "bg-emerald-600 text-[10px] font-black py-3 px-8 border-b-8 border-emerald-900 active:border-b-2 active:translate-y-1 transition-all" %>
            </div>
          <% end %>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6" id="campaigns_list">
          <% if @campaigns.empty? %>
            <div class="bg-slate-900 border-2 border-slate-800 p-6 text-[9px] text-slate-500 uppercase font-bold">
              No campaigns yet. Be the first to host one.
            </div>
          <% end %>
          <%= render @campaigns %>
        </div>
      </section>

      <section data-questboard-target="panel" data-questboard-panel="profile" class="max-w-4xl animate-in fade-in slide-in-from-right-4 duration-500 hidden">
        <h1 class="text-2xl font-black uppercase text-white mb-2">My Adventurer Profile</h1>
        <p class="text-slate-500 text-xs font-bold uppercase tracking-widest mb-10">Define your playstyle for better matches</p>

        <%= render "profiles/form", user: current_user %>
      </section>

      <section data-questboard-target="panel" data-questboard-panel="matching" class="animate-in fade-in slide-in-from-left-4 duration-500 hidden">
        <h1 class="text-2xl font-black uppercase text-white mb-2">Matching Algorithms</h1>
        <p class="text-slate-500 text-xs font-bold uppercase tracking-widest mb-10">AI-suggested groupings for your next quest</p>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <div class="lg:col-span-2 space-y-8">
            <div class="bg-indigo-900/10 border-4 border-indigo-600/30 p-8 flex items-center justify-between gap-6">
              <div>
                <h3 class="text-indigo-400 text-sm font-black uppercase mb-2">Auto-Group for One-Shots</h3>
                <p class="text-[9px] text-slate-400 leading-relaxed uppercase">Instantly join a temporary group matching your playstyle and availability for a quick 3-hour session.</p>
              </div>
              <div id="queue_status">
                <%= render "home/queue", user: current_user %>
              </div>
            </div>

            <%= render "home/suggestions", suggested_users: @suggested_users %>
          </div>

          <div class="bg-slate-900 border-4 border-slate-800 p-6">
            <h3 class="text-[10px] font-black text-white uppercase mb-6 flex items-center gap-2 border-b border-slate-800 pb-4">
              <%= lucide_icon "target", width: 16, height: 16, class: "text-red-500" %> Hot Desiderata
            </h3>
            <div class="space-y-6">
              <div>
                <div class="flex justify-between text-[8px] font-black uppercase mb-2">
                  <span>Tank Needed</span>
                  <span class="text-slate-500">12 Tables</span>
                </div>
                <div class="h-1.5 bg-slate-800 rounded-full overflow-hidden">
                  <div class="h-full bg-red-500" style="width: 60%"></div>
                </div>
              </div>
              <div>
                <div class="flex justify-between text-[8px] font-black uppercase mb-2">
                  <span>DM Shortage</span>
                  <span class="text-slate-500">8 Tables</span>
                </div>
                <div class="h-1.5 bg-slate-800 rounded-full overflow-hidden">
                  <div class="h-full bg-indigo-500" style="width: 40%"></div>
                </div>
              </div>
              <div>
                <div class="flex justify-between text-[8px] font-black uppercase mb-2">
                  <span>Healers Needed</span>
                  <span class="text-slate-500">15 Tables</span>
                </div>
                <div class="h-1.5 bg-slate-800 rounded-full overflow-hidden">
                  <div class="h-full bg-emerald-500" style="width: 75%"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <style>
      ::-webkit-scrollbar { width: 8px; }
      ::-webkit-scrollbar-track { background: #020617; }
      ::-webkit-scrollbar-thumb { background: #1e293b; }
      ::-webkit-scrollbar-thumb:hover { background: #334155; }
      @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
      .animate-fade-in { animation: fadeIn 0.4s ease-out; }
    </style>
  </div>
<% end %>
