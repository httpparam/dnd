<style>
  .pixel-button {
    appearance: none;
    border: none;
    padding: 0.8em 2em;
    font-size: 1.2em;
    font-family: "Patrick Hand", cursive;
    color: #F4F1DE;
    background: #E07A5F;
    image-rendering: pixelated;
    box-shadow:
      0 0 0 0.15em #2B2D42,
      0 0 0 0.3em #F4F1DE,
      0 0 0 0.45em #2B2D42,
      0 0 0.3em 0 0 #a64d3f,
      0 0 0.3em 0 0.15em #2B2D42;
    outline: none;
    transition: all 0.15s steps(1);
    cursor: pointer;
  }

  .pixel-button:hover {
    background: #E07A5F;
    animation: glitch-input 0.3s steps(2) infinite;
  }

  .pixel-button:active {
    box-shadow:
      0 0 0 0.15em #2B2D42,
      0 0 0 0.3em #F4F1DE,
      0 0 0 0.45em #2B2D42,
      0 0 0.1em 0 0 #004d55,
      0 0 0.1em 0 0.15em #2B2D42;
    transform: translateY(0.2em);
  }

  .logo-spin {
    animation: spin 8s linear infinite;
  }
</style>

    <div style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: 50; display: flex; flex-direction: column; align-items: center; gap: 40px;">
  <%= render "shared/logo" %>

  <%= link_to hackclub_auth_path, style: "text-decoration: none;" do %>
    <button type="button" class="pixel-button">Continue with Hack Club</button>
  <% end %>
</div>
