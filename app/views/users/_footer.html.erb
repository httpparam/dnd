<div class="flex items-center gap-3 p-3 bg-slate-800 border-2 border-slate-700 rounded">
  <div class="w-8 h-8 bg-indigo-600 rounded flex items-center justify-center text-[10px] font-bold">
    <%= (user.name || "HH").to_s.split.map(&:first).join.first(2).upcase %>
  </div>
  <div class="flex-1 min-w-0">
    <p class="text-[8px] font-black text-white truncate uppercase"><%= user.name || "HackHero" %></p>
    <p class="text-[7px] text-emerald-400 font-bold uppercase"><%= user.email || "Email pending" %></p>
  </div>
  <%= button_to logout_path, method: :delete, class: "text-slate-500 hover:text-red-400", form: { data: { turbo: true } } do %>
    <%= lucide_icon "log-out", width: 14, height: 14 %>
  <% end %>
</div>
